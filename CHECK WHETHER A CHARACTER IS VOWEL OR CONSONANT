#include <stdio.h>

int main() {
    char ch;

    // ek character dalo
    printf("Enter an alphabet: ");
    scanf(" %c", &ch); // Note the space before %c to catch any leftover newline

    // Check karo ke wo letter hai
    if ((ch >= 'a' && ch <= 'z') || (ch >= 'A' && ch <= 'Z')) {
        // lowercase me convert karo asani ke liye
        char lower = (ch >= 'A' && ch <= 'Z') ? ch + 32 : ch;

        // Check karo vowel ke liye
        if (lower == 'a' || lower == 'e' || lower == 'i' || lower == 'o' || lower == 'u') {
            printf("%c is a vowel.\n", ch);
        } else {
            printf("%c is a consonant.\n", ch);
        }
    } else {
        printf("Invalid input. Please enter an alphabet letter.\n");
    }

    return 0;
}
