#include <stdio.h>

int main() {
    int num, i, isPrime = 1;

    // ek number dalo
    printf("Enter a positive integer: ");
    scanf("%d", &num);

    // Check karo numbers 2 se chota hai ya nhi
    if (num < 2) {
        isPrime = 0;
    } else {
        // Check karo factors 2 se sqrt(num) tak
        for (i = 2; i <= num / 2; i++) {
            if (num % i == 0) {
                isPrime = 0;
                break;
            }
        }
    }

    // Output result dikhayega 
    if (isPrime)
        printf("%d is a prime number.\n", num);
    else
        printf("%d is not a prime number.\n", num);

    return 0;
}
